#!/usr/bin/env bash
#display information about subdomains
# $1=domain, $2=subdomain
info ()
{
    echo -n "The subdomain $2"
    dig "$2.$1" | grep -A1 "ANSWER SECTION:" | tail -n 1 | awk '{ print " is a "$4 " record and points to " $5}'
}

if [ "$#" == 2 ]
then
    info $1 $2
else
    info $1 www
    info $1 lb-01
    info $1 web-01
    info $1 web-02
fi
